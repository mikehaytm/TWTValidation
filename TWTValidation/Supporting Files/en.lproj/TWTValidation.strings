/* All validators */
"TWTValidator.valueNil.validationError" = "value is nil";
"TWTValidator.valueNull.validationError" = "value is null";

/* Compound validators */
"TWTCompoundValidator.not.validationError" = "subvalidator passes";
"TWTCompoundValidator.and.validationError" = "one or more subvalidators fail";
"TWTCompoundValidator.or.validationError" = "all subvalidators fail";
"TWTCompoundValidator.mutualExclusion.validationError" = "number of passing subvalidators is not one";

/* Key-value coding validator */
"TWTKeyValueCodingValidator.validationError" = "one or more validators fail";

/* Value validator */
"TWTValueValidator.valueHasIncorrectClass.validationError.format" = "value class (%1$@) is incompatible with required value class (%2$@)";

/* Number validator */
"TWTNumberValidator.valueIsNotIntegral.validationError.format" = "number (%1$@) is not an integer";
"TWTNumberValidator.valueLessThanMinimum.validationError.format" = "number (%1$@) is less than minimum (%2$@)";
"TWTNumberValidator.valueGreaterThanMaximum.validationError.format" = "number (%1$@) is greater than maximum (%2$@)";

/* String validators */
"TWTBoundedLengthStringValidator.lengthLessThanMinimum.validationError.format" = "string length (%1$lu) is less than minimum length (%2$lu)";
"TWTBoundedLengthStringValidator.lengthGreaterThanMaximum.validationError.format" = "string length (%1$lu) is greater than maximum length (%2$lu)";
"TWTRegularExpressionStringValidator.validationError" = "string does not match regular expression (%1$@)";

/* Collection validators */
"TWTCollectionValidator.validationError" = "collection is invalid";
"TWTKeyedCollectionValidator.validationError" = "keyed collection is invalid";
